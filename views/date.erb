require 'date'

<!DOCTYPE html>
<html>
  <head>
    <h1>Today</h1>
    <% weekday = Date.today.strftime("%A") %>
    <% month = Date.today.strftime("%B") %>
    <% day = Date.today.strftime("%d") %>
    <% year = Date.today.strftime("%Y") %>
    <body>
      <p><%= "The date is #{weekday}, #{month} #{day}, #{year}" %></p>
    </body>
  </head>
</html>